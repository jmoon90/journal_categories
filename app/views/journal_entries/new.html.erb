<% if @journal_entry.errors.full_messages.any? %>
  <% @journal_entry.errors.full_messages.each do |error_message| %>
    <%= error_message %><br>
  <% end %>
<% end %>

<%= form_for(@journal_entry) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <% selection = [] %>
  <% Category.all.each do |category| %>
    <% selection << category.name %>
  <% end %>
  <%= select_tag 'journal_entry[journal_category]', options_for_select(selection) %>
  <br>
  <%= f.submit %>
<% end %>
