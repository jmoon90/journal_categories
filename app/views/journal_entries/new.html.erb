<% if @journal_entry.errors.full_messages.any? %>
  <% @journal_entry.errors.full_messages.each do |error_message| %>
    <%= error_message %><br>
  <% end %>
<% end %>

<%= form_for(@journal_entry) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= select(:journal_categories, :category_id, options_for_select([Category.all])).save %>
  <br>
  <%= f.submit %>
<% end %>
